            "line"        : { "type" : "number"                    },
            "amount"      : { "type" : "number"                    },
            "isResolved"  : { "type" : "boolean"                   },
            "updatedTime" : { "type" : "date"                      }
        },
        "hasTimestamps" : true,
        "canCreate"     : true,
        "canEdit"       : false,
        "canDelete"     : false
    }
