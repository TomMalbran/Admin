        "hasStatus"     : true,
        "hasPosition"   : true,
        "hasTimestamps" : true,
        "canCreate"     : true,
        "canEdit"       : true,
        "canDelete"     : true
    },
    "contacts" : {
        "table"  : "contacts",
        "fields" : {
            "CONTACT_ID" : { "type" : "id",    "name" : "contactID" },
