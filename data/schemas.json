{
    "slides" : {
        "table"  : "slides",
        "fields" : {
            "SLIDE_ID"    : { "type" : "id",     "name"     : "slideID" },
            "type"        : { "type" : "string", "noEmpty"  : true      },
            "name"        : { "type" : "string", "isName"   : true      },
            "image"       : { "type" : "image",  "noEmpty"  : true      },
            "logo"        : { "type" : "image",  "noEmpty"  : true      },
            "title"       : { "type" : "string"                         },
            "description" : { "type" : "text"                           },
            "button"      : { "type" : "string"                         },
            "link"        : { "type" : "string"                         },
            "color"       : { "type" : "string"                         }
